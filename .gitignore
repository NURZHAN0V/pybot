# Игнорируем файл базы данных SQLite
database.db

# Игнорируем файл с переменными окружения (.env) — содержит чувствительные данные (API-ключи, пароли и т. д.)
.env

# Игнорируем виртуальное окружение Python (venv) — оно создаётся локально и не должно быть в репозитории
venv/

# Игнорируем директорию с байт-кодом Python (создаётся автоматически при импорте модулей)
__pycache__/

# Дополнительные рекомендации (можно добавить по необходимости):

# Игнорировать файлы логов
*.log

# Игнорировать файлы с промежуточными результатами/кэшем
*.pyc
*.pyo

# Игнорировать директории дистрибуции (если используете setup.py или pyproject.toml)
dist/
build/

# Игнорировать директорию временных файлов
temp/

# Игнорировать файлы IDE (PyCharm, VS Code и др.)
.idea/
.vscode/

# Игнорировать файлы резервных копий (создаются некоторыми редакторами)
*~

# Игнорировать файлы с настройками локального разработчика (если есть)
.local_settings.py
